{
    "tasks": [
        {
            "type": "shell",
            "label": "Custom C/C++: g++ build active file",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "windows": {
                "options": {
                    "shell": {
                        "executable": "PowerShell"
                    }
                },
                "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
                "args": [
                    "-pipe",
                    //"-fsanitize=address,undefined",
                    "-g",
                    "-march=native",
                    "-std=c++23",
                    "-Werror",
                    "-Wconversion",
                    "-Wall",
                    "-Wshadow",
                    "-Wno-unused-result",
                    "${file}",
                    "-o",
                    "${fileDirname}/${fileBasenameNoExtension}"
                ]
            },
            "linux": {
                "command": "/usr/bin/g++",
                "args": [
                    "-pipe",
                    "-fsanitize=signed-integer-overflow,undefined",
                    "-g",
                    "-march=native",
                    "-std=c++23",
                    "-Wall",
                    "-Wshadow",
                    "-Wno-unused-result",
                    "${file}",
                    "-o",
                    "${fileDirname}/${fileBasenameNoExtension}"
                ]
            }
        }
    ],
    "version": "2.0.0"
}